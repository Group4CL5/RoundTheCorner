<div class="card   text-center">
    <div class="card-header">
        <h3>Register Your Truck</h3>
    </div>
    <div class="card-body"></div>
    <form>
        <label>Company Name</label>
        <input class="form-control" style=" width: 70%; margin:0 auto; "/>
        </br>     
        <label>Email</label>
        <input type="email" class="form-control" style="width:70%; margin:0 auto;" />
        <br />
        <label>Email Confirmation</label>
        <input type="email" class="form-control" style="width:70%; margin:0 auto;" />
        <br />
        <label>Password</label>
        <input type="password" class="form-control" style="width:70%; margin:0 auto;" />
        <br />    
        <label>Password Confirmation</label>
        <input type="password" class="form-control" style="width:70%; margin:0 auto;" /> 
        </br>
        <label>Are you a truck?</label>
        <input type="checkbox" class="form-control" style="width:70%; margin:0 auto;" />
        <br />
        <button class="btn btn-primary">Register</button>
             
    </form>
</div>

