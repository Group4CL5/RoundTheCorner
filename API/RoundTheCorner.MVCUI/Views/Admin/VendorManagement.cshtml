@model RoundTheCorner.BL.Models.VendorModel
@{
    ViewBag.Title = "VendorManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>VendorManagement</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
