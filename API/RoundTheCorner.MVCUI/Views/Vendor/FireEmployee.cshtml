@model RoundTheCorner.MVCUI.Models.ViewModels.EmployeeVendorViewModel

@{
    ViewBag.Title = "FireEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-body">
	<h2>FireEmployee</h2>

	<h3>Are you sure you want to fire this employee?</h3>
	<div>
		<hr />
		<dl class="dl-horizontal">
			<dt>
				Employee
			</dt>

			<dd>
				@Model.User.FirstName @Model.User.LastName
			</dd>

		</dl>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="form-actions no-color">
				<input type="submit" value="Fire" class="btn btn-default btn-primary" /> |
				@Html.ActionLink("Back to List", "Index")
			</div>
		}
	</div>
</div>