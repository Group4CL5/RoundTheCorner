@model RoundTheCorner.BL.Models.VendorModel
@{
    ViewData["Title"] = "Registration Page";
}

    <div class="text-center">
        <img src="~/pictures/roundcornerplaceholder.jpg" width="100" />
        <!--<h3 class="display-4">Registration!</h3>-->
    </div>

@if (ViewBag.Success != null)
{
    <p class="text-center">@ViewBag.Success</p>
}
else
{
<div class="card   text-center">
    <div class="card-header">
        <h3>Register Your Truck</h3>
    </div>
    @if(ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
    <div class="card-body"></div>
    <form>
        <label>Company Name</label>
        <input asp-for="CompanyName" class="form-control" style=" width: 70%; margin:0 auto; " />
        <br />
        <label>Company Email (Optional)</label>
        <input asp-for="CompanyEmail" type="email" class="form-control" style="width:70%; margin:0 auto;" />
        <br />
        <label>License Number</label>
        <input asp-for="LicenseNumber" type="number" class="form-control" style="width:70%; margin:0 auto;" />
        <br />
        <label>Inspection Date</label>
        <input asp-for="InspectionDate" type="date" class="form-control" style="width:70%; margin:0 auto;" />
        <br />
        <label>Bio (Optional)</label>
        <textarea asp-for="Bio" class="form-control" style="width:70%; margin:0 auto;" ></textarea>
        <br />
        <label>Website (Optional)</label>
        <input asp-for="Website" type="url" class="form-control" style="width:70%; margin:0 auto;" />
        <br />
        @*<label>Password</label>
        <input asp-for="CompanyPassword" type="password" class="form-control" style="width:70%; margin:0 auto;" />
        <br />*@
        @*<label>Password Confirmation</label>
        <input type="password" class="form-control" style="width:70%; margin:0 auto;" />
        <br/>*@
    <div class="form-group">
        <button class="btn btn-primary">Register</button>
    </div>
    </form>
</div>
}
