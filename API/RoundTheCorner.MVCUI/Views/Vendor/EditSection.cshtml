@model RoundTheCorner.BL.Models.MenuSectionModel
@{
	ViewBag.Title = "Edit Menu Section";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-body">
	<h2>Edit Menu Section</h2>
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>UserModel</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.MenuSectionID)
		@Html.HiddenFor(model => model.MenuID)

		<div class="form-group">
			@Html.LabelFor(model => model.MenuSectionName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.MenuSectionName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.MenuSectionName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DisplayOrderNum, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.DisplayOrderNum, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.DisplayOrderNum, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</div>
	</div>
}

	<div>
		@Html.ActionLink("Back to List", "EditMenu", "Vendor", new { id = Model.MenuID })
	</div>
</div>
