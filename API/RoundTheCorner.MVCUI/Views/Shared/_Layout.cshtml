<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <title>@ViewData["Title"] - RoundTheCorner</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("/Content/css")
    <style>
        body {
            padding: 0;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">
                    <img src="~/Images/roundcornerplaceholder.png" width="50" />
                    <a class="navbar-brand" runat="server" href="/">RoundTheCorner</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <!--Our layout in home-->
                            <li class="nav-item">
                                <a class="nav-link" runat="server" href="/Home/AboutUs">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" runat="server" href="/Vendor/FindFood">Find Food</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" runat="server" href="/User/UserRegistration">User Registration</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top text-muted dark-footer">
            <div class="container">
                &copy; 2020 - RoundTheCorner - <a href="/Home/Privacy" runat="server">Privacy</a>
                - <a href="/Vendor/VendorRegistration" runat="server">Vendor Registration</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
